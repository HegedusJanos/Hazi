@page "/blist"
@inject IBookServices BookService

@if (Books is not null)
{
    <table class="table table-hover table-bordered">
        <thead>
        <th>Title</th>
        <th>Author</th>
        <th></th>
        </thead>
        <tbody>
        @foreach (var book in Books)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>
                    <a href="details/@book.Id">Details</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    
    private IEnumerable<Book>? Books { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Books = await BookService.GetBookAsync();
    }
}
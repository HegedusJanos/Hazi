<h3>BookForm</h3><EditForm Model="book" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Title</label>
        <InputText @bind-Value="book.Title" class="form-control" />
        <ValidationMessage For="() => book.Title" />
    </div>
    <div class="mb-3">
        <label class="form-label">Adress</label>
        <InputText @bind-Value="book.Author" class="form-control" />
        <ValidationMessage For="() => book.Author" />
    </div>
    <div class="mb-3">
        <label class="form-label">Adress</label>
        <InputText @bind-Value="book.Creators" class="form-control" />
        <ValidationMessage For="() => book.Creators" />
    </div>
    <div class="mb-3">
        <label class="form-label">Birth Date</label>
        <InputDate @bind-Value="book.CreatedDate" class="form-control" />
        <ValidationMessage For="() => book.CreatedDate" />
    </div>

    <button type="submit" class="btn btn-primary form-control">@ButtonTitle</button>
</EditForm>

@code {
    [Parameter]
    public Book book { get; set; }

    [Parameter]
    public string ButtonTitle { get; set; }

    [Parameter]
    public Func<Task> OnValidSubmit { get; set; }
}